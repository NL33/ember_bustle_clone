Bustler.ArticlesController = Ember.Controller.extend({ 
  actions: {
    showShare: function() {
      alert("Dracula is fictional, but was inspired by the 15th-century Romanian general and Wallachian Prince Vlad III the Impaler.")
    },

    showSing: function() {
      alert("Dracula is fictional, but was inspired by the 15th-century Romanian general and Wallachian Prince Vlad III the Impaler.")
    }

   }
});


